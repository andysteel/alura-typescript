{
    "compilerOptions": {
        "outDir": "dist/js",
        "target": "ES2022",
        "noEmitOnError": true,
        "module": "ES2022",
        "moduleResolution": "node",
        "allowUnreachableCode": false,
        "noImplicitAny": true,
        "removeComments": true,
        "strictNullChecks": true
    },
    "include": ["app/**/*"]
}